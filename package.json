{
  "name": "meico",
  "version": "1.0.0",
  "description": "Static webpage for the Mozilla Internet Ecosystem (MIECO)",
  "scripts": {
    "clean": "rimraf dist",
    "start": "npx concurrently \"npm:watch:jinja\" \"npm:watch:parcel\"",
    "build:jinja": "python build.py",
    "build": "npm run clean && npm run build:jinja && parcel build html_output/mieco/index.html --no-source-maps --public-url ../",
    "watch:jinja": "npx watch 'npm run build:jinja' pages/  templates/",
    "watch:parcel": "npx parcel html_output/mieco/index.html --port 8000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozmeao/MEICO.git"
  },
  "author": "mozmeao",
  "license": "MPL",
  "bugs": {
    "url": "https://github.com/mozmeao/MEICO/issues"
  },
  "homepage": "https://github.com/mozmeao/MEICO#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.8.0",
    "concurrently": "^7.6.0",
    "parcel": "^2.8.0",
    "parcel-namer-rewrite": "^2.0.0-rc.3",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "@mozilla-protocol/core": "^16.0.1",
    "rimraf": "^3.0.2"
  },
  "parcel-namer-rewrite": {
    "hashing": "always",
    "rules": {
      "(.*)\\.(css)": "css/$1.{hash}.css",
      "(.*)\\.(js)": "js/$1.{hash}.js",
      "(.*)\\.(woff2?)": "fonts/$1.{hash}.$2",
      "(.*)\\.(svg|png|gif|jpg)": "img/$1.{hash}.$2",
      "(.*)\\/index.html": "mieco/$1/index.html",
      "index.html": "mieco/index.html"
    }
  }
}
